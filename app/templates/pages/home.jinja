{% extends "pages/base.jinja" %}

{% block title %}
 Hello, World!
{% endblock %}

{% block content %}
<h1>Hellooo!!!</h1>

<section id="liste">
  <section> 
    {% for thing in things %}
    <article 
        class="
            {% if thing['name'].lower() == 'beer' %}bier{% endif %}
            {% if thing['name'].upper() == 'FREDERIKKWEE' %}gnome{% endif %}
        ">
      
      <header>{{ thing["name"] }}</header>
      <div>Cost$: {{ thing["cost"] }}</div>

      {% if thing['name'].lower() == 'beer' %}
      <div class="beer-animation">
        üç∫ Cheers!
        <div class="bubbles">
          <span></span><span></span><span></span>
        </div>
      </div>
      {% endif %}

      {% if thing['name'].upper() == 'FREDERIKKWEE' %}
      <div class="gnome-animation">
        üßô‚Äç‚ôÇÔ∏è FREEDDDDIIII
        <div class="gnome-bounce">üßù</div>
      </div>
      {% endif %}

      <footer></footer>
    </article>
    {% endfor %}
  </section>
</section>

<!-- JS -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Bier-Animation
    document.querySelectorAll("article.bier").forEach(function(el) {
      el.addEventListener("click", function() {
        const anim = el.querySelector(".beer-animation");
        if (anim) {
          anim.classList.add("active");
          setTimeout(() => anim.classList.remove("active"), 3000);
        }
      });
    });

    // Gnome-Animation
    document.querySelectorAll("article.gnome").forEach(function(el) {
      el.addEventListener("click", function() {
        const anim = el.querySelector(".gnome-animation");
        if (anim) {
          anim.classList.add("active");
          setTimeout(() => anim.classList.remove("active"), 3000);
        }
      });
    });
  });
</script>
{% endblock %}
